{
  "version": 2,
  "buildCommand": "cd client && npm run build",
  "outputDirectory": "client/build",
  "framework": "create-react-app",
  "env": {
    "REACT_APP_API_URL": {
      "description": "API URL for the backend (e.g., https://your-domain.vercel.app/api)",
      "required": true
    },
    "DATABASE_URL": {
      "description": "MongoDB Atlas connection string",
      "required": true
    },
    "JWT_SECRET": {
      "description": "Secret key for JWT tokens",
      "required": true
    }
  },
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x",
      "memory": 1024,
      "maxDuration": 60
    }
  }
}
